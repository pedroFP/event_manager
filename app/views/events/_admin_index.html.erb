<h1>Eventos
  <span class="text-right"><%= link_to "Nuevo", '#', class: 'btn btn-success btn-sm new' %></span>
</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Categoría</th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.category %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= number_to_currency(event.price, precision: 0) %></td>
        <td><%= link_to 'Ver', event, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_event_path(event), class: 'btn btn-warning edit', id: event.id %></td>
        <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: '¿Estas seguro?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render 'modal_event' %>
